{{outlet}}

<div class="contenedor">

  <div class="vbox header">
	
    <p class="tmp-nota-derecha">Editando el proyecto {{model.ubicacion}}</p>

<!--  Barra de botones de accion superior -->
    <div class="">
      <button class="ui button botonppal" {{action "capturar"}}><i class="photo icon"></i></button>
      <button class="ui button botonppal" {{action "previsualizar"}}><i class="play icon"></i></button>
	  <button class="ui button botonppal" ><i class="setting icon"></i></button> <!-- Deberia abrir paneles de configuracion de Grid, Onion, etc -->
    </div>


    <p>Cantidad de cámaras disponibles: {{camaras.cantidadDeCamaras}}</p>

    {{#each camaras.camaras as |camara id|}}
      <button {{action "seleccionarCamara" id}}>{{camara.ID_V4L_PRODUCT}} ({{camara.DEVNAME}})</button>
    {{/each}}

    {{outlet}}

  </div>

  <div class="vbox vbox-camara">
    {{huayra-camara}}
    {{huayra-cebolla config=cebolla}}
    {{huayra-grilla config=grilla}}
  </div>

  <div class="vbox vbox-opciones">
   <div class="ui icon buttons"> 
		<button {{action "mostrarTimeline"}}class="ui toggle button active {{if mostrarTimeline 'active'}} botonchico"><i class="film icon chico"></i></button>  <!-- COMPLETAME -->
		<button {{action "mostrarGrilla"}}class="ui toggle button active botonchico"><i class="table icon chico"></i></button>
		<button {{action "mostrarCebolla"}}class="ui toggle button active botonchico"><i class="clone icon chico"></i></button>
		<button {{action "seleccionarCamara"}}class="ui toggle button active botonchico"><i class="record icon chico"></i></button>
	</div>
  </div>
